    <script>
        // Function to get timestamp from URL (e.g., ?t=60)
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        // Get start time from URL
        const startTime = getQueryParam("t");

        // Wait for video to load before seeking
        const video = document.getElementById("agolVideo");
        video.addEventListener("loadedmetadata", () => {
            if (startTime) {
                video.currentTime = parseFloat(startTime); // Seek to the time
            }
        });
    </script>
